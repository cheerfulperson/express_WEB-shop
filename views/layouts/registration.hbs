<form action="/registration" method="post">
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="name"><b>Name</b></label>
        <input type="text" placeholder="Enter name: Poool" name="name" value={{name}}>

        <label for="email"><b>Email</b></label>
        <input type="email" placeholder=
        {{#if isEmailsReapet}}
            "Email is already busy" class="placeholder" 
        {{else}}
            "Enter Email: electrons.contact@gmail.com" class=""
        {{/if}}  
        name="email" >

        <label for="psw"><b>Password</b></label>
        <input id="password" type="password" placeholder="Enter Password" name="password" value={{password}}>

        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input id="passwordRepeat" type="password" placeholder=
        {{#if isPasswordUnRepeat}}
            "Password is not reapet" class="placeholder" 
        {{else}}    
            "Repeat Password" class=""
        {{/if}}
            name="passwordRepeat" value={{pwsReapet}}>
        <hr>

        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <div id="regBtn">
            <div class="none-registerbtn">Register</div>                 
        </div>
        
    
    <div class="container-signin">
        <p>Already have an account? <a href="/login">Sign in</a>.</p>
    </div>
    </div>
</form>
