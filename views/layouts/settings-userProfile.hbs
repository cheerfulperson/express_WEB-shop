    .drag_and_drop {
        position: relative;
        width: 60%;
        height: 100px;
        border: 2px dashed #ccc;
        border-radius: 20px;
        width: 320px;
        font-family: sans-serif;
        margin: 100px auto;
        padding: 20px;
    }

    .highlight {
        width: 65%;
        height: 120px;
        background: url(https://www.freeiconspng.com/uploads/upload-icon-30.png) no-repeat;
        background-size: 100px;;
        background-position: center center;
    }
    .err_window{
        position: fixed;
        margin-top: 10px;

        background: rgba(255, 255, 255);

        width: 320px;
        height: 180px;

        z-index: 101;

        border-radius: 10px;
        box-shadow: 0px 0px 5px 1px #000000;
    }
    .btnOk{
        float: right;
        font-size: 14px;
        margin-right: 20px;
        padding: 4px;
        border-radius: 5px;

        background: skyblue;
        box-shadow: 0px 0px 10px 1px #e6f8ff;
    }
    .btnOk:hover{
        background: rgb(41, 169, 219);
        box-shadow: 2px 2px 10px 1px #e6f8ff;
    }
</style>
