<h1>{{getTitle title}}</h1>
<div class="account__holder">
    {{> settings-menu}}

    <form method="post" action="/settings/save-settings" name="settings">
        <div class="form_section form_section_settings_photo">

            <div class="form_inner_block image_inner_block">
                <h2 style="padding-top: 40px">Загрузите вашу фотографию или выберите</h2>

                <div class="user_profile_image settings_image">
                    <img class="form_settings__image" src="{{profileImage}}" alt="">
                </div>
                <div class="button_delete_user_image">
                    <button type="button" id="delete_profile_image"><i class="bi bi-trash"></i></button>
                </div>
                <ul class="choose_image">
                    <li class="user_profile_image"><img
                            src="https://www.meme-arsenal.com/memes/be50e6ba99654b5455027dcc82beb5b3.jpg" alt=""></li>
                    <li class="user_profile_image"><img 
                            src="https://www.blast.hk/attachments/64805/" alt=""></li>
                    <li class="user_profile_image"><img
                            src="https://www.meme-arsenal.com/memes/0098988ef41b8c0d571016c93bd7dd0d.jpg" alt=""></li>
                    <li class="user_profile_image"><img
                            src="https://prikolist.club/wp-content/uploads/2019/07/1-456.jpg"
                            alt=""></li>
                    <li class="user_profile_image"><img
                            src="https://pbs.twimg.com/profile_images/1264968926578061315/r3W8qHXB.jpg"
                            alt=""></li>                        
                </ul>
                <div class="pretty_button">
                    <button type="button">Загрузить фотографию <i class="bi bi-cloud-arrow-up"></i></button>
                </div>
            </div>

        </div>

        <div class="form_section  form_section_type_mypages">
            <h2>Персональные данные</h2>
            <b class="form_account_label form_position">
                физическое лицо
            </b>
            <div class="form_caption"> 
                <label class="form_tag form_tag_name" for="name">Имя
                    <span class="form_required"style="color: red;">*</span>
                </label> 
            </div>
            <div class="form_data"> 
                <input class="form_text form_text_type_name" type="text" name="name" maxlength="100" value="{{profile_name}}" id="name"> 
            </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="sername">Фамилия</label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="text" name="sername"
                    maxlength="100" value="{{sername}}" id="name"> </div>
              <div class="form_caption"> 
                <label class="form_tag form_tag_bio" for="name">Расскажите нам о себе</label> 
            </div>
            <div class="form_data"> 
                <textarea class="form_text form_text_type_name" type="text" name="bio" maxlength="300" id="name" style="height: 100px;width:60%">{{bio}}</textarea>
            </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="birthday">Дата рождения</label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="date" name="birthday"
                    maxlength="100" value="{{birthday}}" id="name"> </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="gender">Пол</label> </div>
            <div class="form_data">
                <select class="w3-select" name="gender">
                    <option name="gender" value="0" disabled selected>{{getGender gender}}</option>

                    <option name="gender" value="1">муж</option>

                    <option name="gender" value="2">жен</option>

                </select>


            </div>
        </div>
        <div class="form_section  form_section_type_contacts_data">
            <h2>Контакты</h2>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="name">Телефон 1<span
                        class="form_required" style="color: red;">*</span></label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="text" name="phone1"
                    maxlength="100" value="{{phone1}}" id="name"> </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="name">Телефон 2</label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="text" name="phone2"
                    maxlength="100" value="{{phone2}}" id="name"> </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="name">Телефон 3</label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="text" name="phone3"
                    maxlength="100" value="{{phone3}}" id="name"> </div>
            <div class="form_caption"> <label class="form_tag form_tag_name" for="name">Запасной email</label> </div>
            <div class="form_data"> <input class="form_text form_text_type_name" type="text" name="enatherEmail"
                    maxlength="100" value="{{seconedEmail}}" id="name"> </div>
            <div class="pretty_button">
                <button type="submit">Сохранить <i class="bi bi-cloud-arrow-up"></i></button>
            </div>

        </div>
    </form>
